<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
                <groupId>org.jboss.tools.integration-tests</groupId>
		<artifactId>tests</artifactId>
		<version>4.0.0-SNAPSHOT</version>
	</parent>
	<groupId>org.jboss.tools.teiid</groupId>
	<artifactId>org.jboss.tools.teiid.ui.bot.test</artifactId>
	<version>4.0.0-SNAPSHOT</version>
	<packaging>eclipse-test-plugin</packaging>

	<properties>
	  <systemProperties>${integrationTestsSystemProperties} -Dswtbot.test.properties.file=./swtbot.properties</systemProperties>
	  <test.package>org.jboss.tools.teiid.ui.bot.test.suite</test.package>
	  <test.class>AllTests</test.class>
	  <jdbc.dir>${requirementsDirectory}/lib</jdbc.dir>
	  <jbtis.site>http://download.jboss.org/jbosstools/updates/integration/juno/integration-stack/aggregate/4.0.0</jbtis.site>
	  <teiid-820final.url>http://sourceforge.net/projects/teiid/files/teiid/8.2/Final/teiid-8.2.0.Final-jboss-dist.zip</teiid-820final.url>
	  <teiid-830final.url>http://downloads.sourceforge.net/project/teiid/teiid/8.3/Final/teiid-8.3.0.Final-jboss-dist.zip</teiid-830final.url>
	  <teiid-designer-810Final.site>http://download.jboss.org/jbosstools/updates/release/juno/soa-tooling/teiiddesigner/8.1.0.Final</teiid-designer-810Final.site>
	  <teiid-designer.site>${teiid-designer-810Final.site}</teiid-designer.site>
	</properties>

	<repositories>
	  <!-- Teiid Repository -->
	  <repository>
	    <id>teiid</id>
	    <url>${teiid-designer.site}</url>
	    <layout>p2</layout>
	    <snapshots>
	      <enabled>true</enabled>
	    </snapshots>
	    <releases>
	      <enabled>true</enabled>
	    </releases>
	  </repository>
	</repositories>

	<build>
	  <plugins>
	    <!-- Run Teiid Bot Tests -->
	    <plugin>
	      <groupId>org.eclipse.tycho</groupId>
	      <artifactId>tycho-surefire-plugin</artifactId>
	      <configuration>
		<appArgLine>-eclipse.password resources/security/password</appArgLine>
		<useUIThread>false</useUIThread>
		<surefire.timeout>3600</surefire.timeout>
		<forkedProcessTimeoutInSeconds>3600</forkedProcessTimeoutInSeconds>
		<testSuite>org.jboss.tools.teiid.ui.bot.test</testSuite>
		<testClass>${test.package}.${test.class}</testClass>
		<skip>${swtbot.test.skip}</skip>
		<dependencies combine.children="append">
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.teiid.designer.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.teiid.designer.runtime.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.teiid.datatools.connectivity.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.jboss.ide.eclipse.as.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		</dependencies>
	      </configuration>
	    </plugin>
	    <plugin>
	      <groupId>com.googlecode.maven-download-plugin</groupId>
	      <artifactId>maven-download-plugin</artifactId>
	      <executions>
		<execution>
		  <id>get-hsqldb</id>
		  <phase>pre-integration-test</phase>
		  <goals>
		    <goal>wget</goal>
		  </goals>
		  <configuration>
		    <url>http://sourceforge.net/projects/hsqldb/files/hsqldb/hsqldb_2_2/hsqldb-2.2.9.zip</url>
		    <md5>c2a47e08e95cdff1dc9bb2f8dd73d553</md5>
		    <unpack>true</unpack>
		  </configuration>
		</execution>
	      </executions>
	    </plugin>
	    <!-- JBTIS Target Platform -->
	    <plugin>
	      <groupId>org.eclipse.tycho</groupId>
	      <artifactId>target-platform-configuration</artifactId>
	      <version>${tychoVersion}</version>
	      <configuration>
		<target>
		  <artifact>
		    <groupId>org.jboss.tools.integration-stack</groupId>
		    <artifactId>target-platform</artifactId>
		    <version>4.0.0-SNAPSHOT</version>
		    <type>target</type>
		    <classifier>base</classifier>
		  </artifact>
		</target>
	      </configuration>
	    </plugin>
	  </plugins>
	</build>
	
	<profiles>
	  <!-- Install AS and Teiid -->
	  <profile>
	    <id>as-teiid</id>
	    <properties>
	      <systemProperties>${integrationTestsSystemProperties} -Dswtbot.test.properties.file=./as-teiid.properties</systemProperties>
	    </properties>
	    <build>
	      <plugins>
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>get-as</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>http://download.jboss.org/jbossas/7.1/jboss-as-7.1.1.Final/jboss-as-7.1.1.Final.zip</url>
			<md5>175c92545454f4e7270821f4b8326c4e</md5>
			<unpack>true</unpack>
		      </configuration>
		    </execution>
		    <execution>
		      <id>get-teiid</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>${teiid-830final.url}</url>
			<unpack>true</unpack>
			<outputDirectory>${requirementsDirectory}/jboss-as-7.1.1.Final</outputDirectory>
		      </configuration>
		    </execution>
	      </executions>
		</plugin>
		<plugin>
		  <artifactId>maven-antrun-plugin</artifactId>
		  <version>${maven.antrun.plugin.version}</version>
		  <executions>
		    <execution>
		      <id>prepare-teiid</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>run</goal>
		      </goals>
		      <configuration>
			<tasks>
			  <copy file="${requirementsDirectory}/jboss-as-7.1.1.Final/standalone/configuration/standalone-teiid.xml" tofile="${requirementsDirectory}/jboss-as-7.1.1.Final/standalone/configuration/standalone.xml" overwrite="true"/>
			  <echo file="as-teiid.properties">SERVER=AS,7.1,default,target/requirements/jboss-as-7.1.1.Final</echo>
			</tasks>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	  <!-- To download ojdbc6.jar using maven, specify url in -Djdbc.ojdbc6 in command line  --> 
	  <profile>
	    <id>profile-ojdbc6</id>
	    <activation>
	      <property>
		<name>jdbc.ojdbc6</name>
	      </property>
	    </activation>
	    <build>
	      <plugins>
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>get-jdbc-oracle</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>${jdbc.ojdbc6}</url>
			<unpack>false</unpack>
			<outputDirectory>${jdbc.dir}</outputDirectory>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	  <!-- To download sqljdbc4.jar using maven, specify url in -Djdbc.sqljdbc4 in command line  --> 
	  <profile>
	    <id>profile-sqljdbc</id>
	    <activation>
	      <property>
		<name>jdbc.sqljdbc4</name>
	      </property>
	    </activation>
	    <build>	
	      <plugins>
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>get-jdbc-sqlserver</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>${jdbc.sqljdbc4}</url>
			<unpack>false</unpack>
			<outputDirectory>${jdbc.dir}</outputDirectory>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	</profiles>

</project>
