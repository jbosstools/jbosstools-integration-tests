		<!-- Profile for smoke tests. -->
		<profile>
			<id>smoke</id>
			<properties>
				<test.class>org.jboss.tools.runtime.as.ui.bot.test.SmokeSuite</test.class>
				<wildfly-10.0>${requirementsDirectory}/wildfly-10.0.0.Final/</wildfly-10.0>
				<req.java8.home>${java.home}</req.java8.home>
				<reddeer.config>${project.build.directory}/../resources/generated_resources/java8.xml</reddeer.config>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>install-widlfly-10</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<skip>${skipTests}</skip>
									<artifactItems>
										<artifactItem>
											<groupId>org.wildfly</groupId>
											<artifactId>wildfly-dist</artifactId>
											<version>10.0.0.Final</version>
											<type>zip</type>
										</artifactItem>
									</artifactItems>
