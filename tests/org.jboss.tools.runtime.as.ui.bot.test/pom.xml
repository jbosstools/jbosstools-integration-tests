											<groupId>org.wildfly</groupId>
											<artifactId>wildfly-dist</artifactId>
											<version>8.1.0.Final</version>
											<type>zip</type>
										</artifactItem>
									</artifactItems>
									<outputDirectory>${requirementsDirectory}</outputDirectory>
								</configuration>
							</execution>
							<execution>
								<id>install-widlfly-8.0.0</id>
