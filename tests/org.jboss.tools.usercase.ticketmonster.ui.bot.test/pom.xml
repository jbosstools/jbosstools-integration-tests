<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jboss.tools.integration-tests</groupId>
		<artifactId>tests</artifactId>
		<version>4.4.2-SNAPSHOT</version>
	</parent>
	<groupId>org.jboss.tools.usercase.tests</groupId>
	<artifactId>org.jboss.tools.usercase.ticketmonster.ui.bot.test</artifactId>
	<packaging>eclipse-test-plugin</packaging>
	<properties>
		<systemProperties>-Djsse.enableSNIExtension=false -Dh2consolelocation=${requirementsDirectory}/ -Djbosstools.test.jboss.eap.home.6.1=${requirementsDirectory}/jboss-eap-6.1 -Djboss.username=${jboss.username} -Djboss.password=${jboss.password}</systemProperties>
	</properties>
	<profiles>
		<profile>
			<id>ticketmonster_eap6</id>
			<build>
				<plugins>
				<plugin>
					<groupId>com.googlecode.maven-download-plugin</groupId>
					<artifactId>download-maven-plugin</artifactId>
					<executions>
						<execution>
							<id>download_h2console</id>
							<phase>pre-integration-test</phase>
							<goals>
								<goal>wget</goal>
							</goals>
							<configuration>
								<url>http://github.com/jboss-developer/jboss-eap-quickstarts/raw/6.4.x-develop/h2-console/h2console.war</url>
								<unpack>false</unpack>
								<md5>add18b9f953221ff565cf7a34aac0ed9</md5>
								<outputDirectory>${requirementsDirectory}</outputDirectory>
							</configuration>
						</execution>
						<execution>
							<id>install-eap-6</id>
							<phase>pre-integration-test</phase>
							<goals>
								<goal>wget</goal>
							</goals>
							<configuration>
								<url>${jbosstools.test.jboss-eap-6.url}</url>
								<md5>${jbosstools.test.jboss-eap-6.md5}</md5>
								<unpack>true</unpack>
								<outputDirectory>${requirementsDirectory}</outputDirectory>
							</configuration>
						</execution>
					</executions>
				</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<resources>
			<resource>
				<directory>resources/usersettings/</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<configuration>
					<testSuite>org.jboss.tools.usercase.ticketmonster.ui.bot.test</testSuite>
					<testClass>org.jboss.tools.usercase.ticketmonster.ui.bot.test.TicketMonsterAllBotTest</testClass>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
