<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
                <groupId>org.jboss.tools.integration-tests</groupId>
		<artifactId>tests</artifactId>
		<version>4.0.0-SNAPSHOT</version>
	</parent>
	<groupId>org.jboss.tools</groupId>
	<artifactId>org.teiid.designer.ui.bot.test</artifactId>
	<version>8.0.0-SNAPSHOT</version>
	<packaging>eclipse-test-plugin</packaging>

	<properties>
	  <systemProperties>-Dswtbot.test.properties.file=./swtbot.properties</systemProperties>
	  <test.class>org.teiid.designer.ui.bot.test.suite.TeiidDesignerAllTests</test.class>
	  <jdbc.dir>${requirementsDirectory}/lib</jdbc.dir>
	</properties>
	
	<!-- Red Deer Repository -->
	<repositories>
	  <repository>
	    <id>red_deer</id>
	    <url>http://p2-reddeer.rhcloud.com/master</url>
	    <layout>p2</layout>
	    <snapshots>
	      <enabled>true</enabled>
	    </snapshots>
	    <releases>
	      <enabled>true</enabled>
	    </releases>
	  </repository>
	</repositories>

	<build>
	  <plugins>
	    <!-- Install AS and Teiid -->
	    <plugin>
	      <groupId>com.googlecode.maven-download-plugin</groupId>
	      <artifactId>maven-download-plugin</artifactId>
	      <executions>
		<execution>
		  <id>get-as</id>
		  <phase>pre-integration-test</phase>
		  <goals>
		    <goal>wget</goal>
		  </goals>
		  <configuration>
		    <url>http://download.jboss.org/jbossas/7.1/jboss-as-7.1.1.Final/jboss-as-7.1.1.Final.zip</url>
		    <md5>175c92545454f4e7270821f4b8326c4e</md5>
		    <unpack>true</unpack>
		  </configuration>
		</execution>
		<execution>
		  <id>get-teiid</id>
		  <phase>pre-integration-test</phase>
		  <goals>
		    <goal>wget</goal>
		  </goals>
		  <configuration>
		    <url>http://sourceforge.net/projects/teiid/files/teiid/8.2/Final/teiid-8.2.0.Final-jboss-dist.zip</url>
		    <unpack>true</unpack>
		    <outputDirectory>${requirementsDirectory}/jboss-as-7.1.1.Final</outputDirectory>
		  </configuration>
		</execution>
	      </executions>
	    </plugin>
	    <plugin>
	      <artifactId>maven-antrun-plugin</artifactId>
	      <version>${maven.antrun.plugin.version}</version>
	      <executions>
		<execution>
		  <id>prepare-teiid</id>
		  <phase>pre-integration-test</phase>
		  <goals>
		    <goal>run</goal>
		  </goals>
		  <configuration>
		    <tasks>
		      <copy file="${requirementsDirectory}/jboss-as-7.1.1.Final/standalone/configuration/standalone-teiid.xml" tofile="${requirementsDirectory}/jboss-as-7.1.1.Final/standalone/configuration/standalone.xml" overwrite="true"/>
		    </tasks>
		  </configuration>
		</execution>
	      </executions>
	    </plugin>
	    <plugin>
	      <groupId>org.eclipse.tycho</groupId>
	      <artifactId>tycho-surefire-plugin</artifactId>
	      <configuration>
		<useUIThread>false</useUIThread>
		<surefire.timeout>3600</surefire.timeout>
		<forkedProcessTimeoutInSeconds>3600</forkedProcessTimeoutInSeconds>
		<testSuite>org.teiid.designer.ui.bot.test</testSuite>
		<testClass>${test.class}</testClass>
		<skip>${swtbot.test.skip}</skip>
		<dependencies combine.children="append">
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.teiid.designer.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.teiid.designer.runtime.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.teiid.datatools.connectivity.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.jboss.ide.eclipse.as.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		</dependencies>
	      </configuration>
	    </plugin>	
	  </plugins>
	</build>
	
	<!-- JDBC Drivers -->
	<profiles>
	  <!-- To download ojdbc6.jar using maven, specify url in -Djdbc.ojdbc6 in command line  --> 
	  <profile>
	    <id>profile-ojdbc6</id>
	    <activation>
	      <property>
		<name>jdbc.ojdbc6</name>
	      </property>
	    </activation>
	    <build>
	      <plugins>
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>get-jdbc-oracle</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>${jdbc.ojdbc6}</url>
			<unpack>false</unpack>
			<outputDirectory>${jdbc.dir}</outputDirectory>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	  <!-- To download sqljdbc4.jar using maven, specify url in -Djdbc.sqljdbc4 in command line  --> 
	  <profile>
	    <id>profile-sqljdbc</id>
	    <activation>
	      <property>
		<name>jdbc.sqljdbc4</name>
	      </property>
	    </activation>
	    <build>	
	      <plugins>
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>get-jdbc-sqlserver</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>${jdbc.sqljdbc4}</url>
			<unpack>false</unpack>
			<outputDirectory>${jdbc.dir}</outputDirectory>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	</profiles>

</project>
