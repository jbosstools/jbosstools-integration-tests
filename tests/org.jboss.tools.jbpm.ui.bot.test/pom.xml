<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jboss.tools.integration-tests</groupId>
		<artifactId>tests</artifactId>
		<version>4.1.0-SNAPSHOT</version>
	</parent>
	<groupId>org.jboss.tools.jbpm.tests</groupId>
	<artifactId>org.jboss.tools.jbpm.ui.bot.test</artifactId>
	<version>4.1.0-SNAPSHOT</version>
	<packaging>eclipse-test-plugin</packaging>

	<properties>
	  <test.class>AllTests</test.class>
	  <swtbot.test.properties.file>./swtbot.properties</swtbot.test.properties.file>
	  <systemProperties>${integrationTestsSystemProperties} -Dswtbot.test.properties.file=${swtbot.test.properties.file}</systemProperties>
	  <jbtis.site>http://download.jboss.org/jbosstools/updates/integration/kepler/integration-stack/aggregate/4.1.0</jbtis.site>
	</properties>

	<repositories>
	  <!-- JBTIS Repository -->
	  <repository>
	    <id>jbtis</id>
	    <url>${jbtis.site}</url>
	    <layout>p2</layout>
	    <snapshots>
	      <enabled>true</enabled>
	    </snapshots>
	    <releases>
	      <enabled>true</enabled>
	    </releases>
	  </repository>
	</repositories>

	<build>
	  <plugins>
	    <plugin>
	      <groupId>org.eclipse.tycho</groupId>
	      <artifactId>tycho-surefire-plugin</artifactId>
	      <configuration>
		<testSuite>org.jboss.tools.jbpm.ui.bot.test</testSuite>
		<testClass>org.jboss.tools.jbpm.ui.bot.test.suite.${test.class}</testClass>
		<useUIThread>false</useUIThread>
		<skip>${skipTests}</skip>
		<dependencies combine.children="append">
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.jboss.tools.jbpm3.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.jboss.tools.jbpm.convert.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		  <dependency>
		    <type>p2-installable-unit</type>
		    <artifactId>org.jboss.ide.eclipse.as.feature.feature.group</artifactId>
		    <version>0.0.0</version>
		  </dependency>
		</dependencies>
	      </configuration>
	    </plugin>
	    <!-- JBTIS Target Platform -->
	    <plugin>
	      <groupId>org.eclipse.tycho</groupId>
	      <artifactId>target-platform-configuration</artifactId>
	      <version>${tychoVersion}</version>
	      <configuration>
		<target>
		  <artifact>
		    <groupId>org.jboss.tools.integration-stack</groupId>
		    <artifactId>target-platform</artifactId>
		    <version>4.1.0-SNAPSHOT</version>
		    <type>target</type>
		    <classifier>base</classifier>
		  </artifact>
		</target>
	      </configuration>
	    </plugin>
	  </plugins>
	</build>

	<profiles>
	  <!-- Install JBoss AS 5.1.0 with jBPM 3.2.9 -->
	  <profile>
	    <id>as51</id>
	    <properties>
	      <jbpm.version>3.2.9</jbpm.version>
	      <swtbot.properties>${requirementsDirectory}/as51.properties</swtbot.properties>
	      <swtbot.test.properties.file>${swtbot.properties}</swtbot.test.properties.file>
	    </properties>
	    <build>
	      <plugins>	  
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>install-as-5.1.0</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>http://repository.jboss.org/sourceforge/jboss-5.1.0.GA.zip</url>
			<md5>78322c75ca0c13002a04418b4a8bc920</md5>
			<unpack>true</unpack>
		      </configuration>
		    </execution>
		    <execution>
		      <id>download-jbpm</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>https://repository.jboss.org/nexus/content/groups/public/org/jbpm/jbpm3/jbpm-distribution/3.2.9/jbpm-distribution-3.2.9-installer.jar</url>
			<unpack>false</unpack>
			<md5>e2d8624bd181235a34b5f97fb088c589</md5>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
		<plugin>
		  <artifactId>maven-antrun-plugin</artifactId>
		  <version>${maven.antrun.plugin.version}</version>
		  <executions>
		    <execution>
		      <id>install-jbpm</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>run</goal>
		      </goals>
		      <configuration>
			<tasks>
			  <java
			      jar="${requirementsDirectory}/jbpm-distribution-3.2.9-installer.jar"
			      dir="${requirementsDirectory}" fork="true">
			    <arg value="../../resources/properties/install-jbpm3.xml" />
			  </java>
			  <echo file="${swtbot.properties}">SERVER=AS,5.1,default,${requirementsDirectory}/jboss-5.1.0.GA${line.separator}JBPM=${jbpm.version},${requirementsDirectory}/jbpm-${jbpm.version}</echo>
			</tasks>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	  <!-- Install SOA Platform 5.2.0 -->
	  <!-- You have to specify soa520.url property -->
	  <profile>
	    <id>soa520</id>
	    <properties>
	      <soa.version>soa520</soa.version>
	      <jbpm.version>3.2.11</jbpm.version>
	      <swtbot.properties>${requirementsDirectory}/${soa.version}.properties</swtbot.properties>
	      <swtbot.test.properties.file>${swtbot.properties}</swtbot.test.properties.file>
	    </properties>
	    <build>
	      <plugins>
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>get-soa</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>${soa520.url}</url>
			<unpack>true</unpack>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
		<plugin>
		  <artifactId>maven-antrun-plugin</artifactId>
		  <version>1.7</version>
		  <executions>
		    <execution>
		      <id>set-soa-user</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>run</goal>
		      </goals>
		      <configuration>
			<target>
			  <echo file="${requirementsDirectory}/jboss-soa-p-5/jboss-as/server/default/conf/props/soa-users.properties">admin=admin</echo>
			  <echo file="${swtbot.properties}">SERVER=SOA,5.3,default,${requirementsDirectory}/jboss-soa-p-5/jboss-as${line.separator}JBPM=${jbpm.version},${requirementsDirectory}/jboss-soa-p-5/jbpm-jpdl</echo>
			</target>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	  <!-- Install SOA Platform 5.3.0 -->
	  <!-- You have to specify soa530.url property -->
	  <profile>
	    <id>soa530</id>
	    <properties>
	      <soa.version>soa530</soa.version>
	      <jbpm.version>3.2.13</jbpm.version>
	      <swtbot.properties>${requirementsDirectory}/${soa.version}.properties</swtbot.properties>
	      <swtbot.test.properties.file>${swtbot.properties}</swtbot.test.properties.file>
	    </properties>
	    <build>
	      <plugins>
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>get-soa</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>${soa530.url}</url>
			<unpack>true</unpack>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
		<plugin>
		  <artifactId>maven-antrun-plugin</artifactId>
		  <version>1.7</version>
		  <executions>
		    <execution>
		      <id>set-soa-user</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>run</goal>
		      </goals>
		      <configuration>
			<target>
			  <echo file="${requirementsDirectory}/jboss-soa-p-5/jboss-as/server/default/conf/props/soa-users.properties">admin=admin</echo>
			  <echo file="${swtbot.properties}">SERVER=SOA,5.3,default,${requirementsDirectory}/jboss-soa-p-5/jboss-as${line.separator}JBPM=${jbpm.version},${requirementsDirectory}/jboss-soa-p-5/jbpm-jpdl</echo>
			</target>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	  <!-- Install SOA Platform 5.3.1 -->
	  <!-- You have to specify soa531.url property -->
	  <profile>
	    <id>soa531</id>
	    <properties>
	      <soa.version>soa531</soa.version>
	      <jbpm.version>3.2.14</jbpm.version>
	      <swtbot.properties>${requirementsDirectory}/${soa.version}.properties</swtbot.properties>
	      <swtbot.test.properties.file>${swtbot.properties}</swtbot.test.properties.file>
	    </properties>
	    <build>
	      <plugins>
		<plugin>
		  <groupId>com.googlecode.maven-download-plugin</groupId>
		  <artifactId>maven-download-plugin</artifactId>
		  <executions>
		    <execution>
		      <id>get-soa</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>wget</goal>
		      </goals>
		      <configuration>
			<url>${soa531.url}</url>
			<unpack>true</unpack>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
		<plugin>
		  <artifactId>maven-antrun-plugin</artifactId>
		  <version>1.7</version>
		  <executions>
		    <execution>
		      <id>set-soa-user</id>
		      <phase>pre-integration-test</phase>
		      <goals>
			<goal>run</goal>
		      </goals>
		      <configuration>
			<target>
			  <echo file="${requirementsDirectory}/jboss-soa-p-5/jboss-as/server/default/conf/props/soa-users.properties">admin=admin</echo>
			  <echo file="${swtbot.properties}">SERVER=SOA,5.3,default,${requirementsDirectory}/jboss-soa-p-5/jboss-as${line.separator}JBPM=${jbpm.version},${requirementsDirectory}/jboss-soa-p-5/jbpm-jpdl</echo>
			</target>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	      </plugins>
	    </build>
	  </profile>
	</profiles>

</project>
